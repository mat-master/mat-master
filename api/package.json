{
	"name": "@mat-master/api",
	"packageManager": "yarn@3.2.0",
	"main": "build/main.js",
	"module": "build/lib.mjs",
	"types": "build/lib.d.ts",
	"scripts": {
		"build:dev": "tsup",
		"build:prod": "esbuild src/main.ts --platform=node --bundle --minify --outfile='build.js'",
		"build:docker": "docker build -t mat-master-api -f Dockerfile ..",
		"build": "yarn build:dev && yarn build:prod && yarn build:docker",
		"start:dev": "node build/main.js",
		"start:prod": "node build.js",
		"dev": "tsup --watch --onSuccess=\"clear && yarn start:dev\""
	},
	"dependencies": {
		"@mat-master/common": "workspace:^",
		"@mat-master/database": "workspace:^",
		"@prisma/client": "^3.15.2",
		"@sendgrid/mail": "^7.7.0",
		"@trpc/server": "^9.25.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"jsonwebtoken": "^8.5.1",
		"stripe": "^9.5.0",
		"superjson": "^1.9.1",
		"trpc-playground": "^0.1.6",
		"zod": "3.17.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2",
		"@types/cors": "^2",
		"@types/express": "^4",
		"@types/jsonwebtoken": "^8",
		"esbuild": "^0.14.42",
		"tsup": "^6.1.2"
	}
}

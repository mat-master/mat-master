{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  },
  "exclude": [
    "**/node_modules"
  ],
  "references": [
    {
      "path": "./common/types"
    },
    {
      "path": "./common/util"
    }
  ]
}